<form action="/users" method="post" accept-charset="UTF-8" data-turbo="false">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div>
        <label for="user[username]">Username</label>
        <input type="text" name="user[username]" id="username" required minlength="4" maxlength="10">
    </div>
    
    <div>
        <label for="user[email]">Email</label>
        <input type="email" name="user[email]" id="email" required>
    </div>

    <div>
        <label for="user[password">Password</label>
        <input type="password" name="user[password]" id="password" required minlength="6" maxlength="16">
    </div>

    <button type="submit">Submit</button>
</form>